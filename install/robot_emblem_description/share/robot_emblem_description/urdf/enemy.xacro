<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="enemy_unit">

  <!-- 基础 link -->
  <link name="enemy_base">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.2"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/> <!-- 红色 -->
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.2"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <!-- 为了在 RViz 里显示，给个 joint 接到 base_link -->
  <joint name="enemy_joint" type="fixed">
    <parent link="world"/>
    <child link="enemy_base"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

</robot>
